package com.example.demo;

import static org.junit.Assert.assertThat;

import java.io.IOException;

import org.apache.http.HttpResponse;
import org.apache.http.HttpStatus;
import org.apache.http.client.ClientProtocolException;
import org.apache.http.client.methods.HttpGet;
import org.apache.http.client.methods.HttpUriRequest;
import org.apache.http.impl.client.HttpClientBuilder;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.boot.web.server.Http2;
import org.springframework.test.context.junit4.SpringRunner;

@RunWith(SpringRunner.class)
@SpringBootTest
public class NalogaApplicationTests {

	@Test
	public void contextLoads() {
		
	}
	
	@Test
	public void userExistsByID()
	  throws ClientProtocolException, IOException {
	  
	   // Given
	   int userId = 999;
	   HttpUriRequest request = new HttpGet( "http://localhost:8080/getOne?id=" + userId );
	 
	   // When
	   HttpResponse httpResponse = HttpClientBuilder.create().build().execute( request );
	 
	   // Then
	   assertThat(httpResponse.getStatusLine().getStatusCode(), equals(HttpStatus.SC_NOT_FOUND));
	}
	

}

